# FinFlare Environment Configuration

# ===========================================
# Backend Configuration (Spring Boot)
# ===========================================

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=finflare
DB_USERNAME=root
DB_PASSWORD=your_mysql_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_must_be_at_least_256_bits_long_for_security
JWT_EXPIRATION=86400000

# OpenAI API Configuration (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===========================================
# Frontend Configuration (React)
# ===========================================

# API Base URL
REACT_APP_API_URL=http://localhost:8080/api

# OpenAI API Key (for client-side AI features)
REACT_APP_OPENAI_API_KEY=sk-your-openai-api-key-here

# ===========================================
# Optional Configuration
# ===========================================

# Server Port (default: 8080)
SERVER_PORT=8080

# Frontend Port (default: 3000)
FRONTEND_PORT=3000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (for notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ===========================================
# Production Configuration
# ===========================================

# Use these for production deployment
# REACT_APP_API_URL=https://your-domain.com/api
# DB_HOST=your-production-db-host
# CORS_ALLOWED_ORIGINS=https://your-domain.com